{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Listen for Xdebug (php8.1)",
            "type": "php",
            "request": "launch",
            "port": 9003,
            "hostname": "0.0.0.0",
            "log": true,
            "pathMappings": {
                "/var/www/html": "${workspaceFolder}/prestashop/"
            },
            "xdebugSettings": {
                "max_children": 128,
                "max_data": 1024,
                "max_depth": 5
            },
            "ignore": ["**/vendor/**/*.php"]
        }
    ]
}
